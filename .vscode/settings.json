{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        ".venv": true,
        ".tox": true,
        ".coverage": true,
        ".hypothesis": true,
        ".pytest_cache": true,
        "**/__pycache__/": true,
        "**/~$*": true,
        "poetry.lock": false
    },
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true
}
